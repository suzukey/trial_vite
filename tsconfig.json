{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@@/*": ["./*"],
      "~/*": ["src/*"],
      "~~/*": ["./*"]
    },
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "newLine": "lf",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": ["node", "vite/client", "@types/jest", "cypress"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue"],
  "exclude": ["dist", "node_modules", "public", "tests/**/*.ts"]
}
